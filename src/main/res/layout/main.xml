<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Logout (only logout)" />

                    <Button
                        android:id="@+id/btn_logout_with_optout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Logout (with optout)" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_open_test_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/configuration_mapp_options" />

                <Button
                    android:id="@+id/buttonDeviceInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_device_info" />

                <Button
                    android:id="@+id/buttonPushEnabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info" />

                <Button
                    android:id="@+id/get_alias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_alias" />

                <Button
                    android:id="@+id/get_deviceId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_deviceId" />

                <Button
                    android:id="@+id/get_device_dmc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_device_dmc" />

                <EditText
                    android:id="@+id/etxt_set_alias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress" />

                <Button
                    android:id="@+id/btn_set_alias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/set_alias" />


                <Button
                    android:id="@+id/second_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2nd_activity" />

                <Button
                    android:id="@+id/geo_fencing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start_geo" />

                <Button
                    android:id="@+id/stop_geo_fencing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stop_geo" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/push_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/push_enabled" />


                <Button
                    android:id="@+id/dmcCallNativeInApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_native_inapp" />

                <Button
                    android:id="@+id/dmcCallInApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fullscreen_app_open" />

                <Button
                    android:id="@+id/inapp_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inapp_events" />

                <Button
                    android:id="@+id/inappModalType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/modal_app_feedback" />

                <Button
                    android:id="@+id/inappBannerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/banner_app_discount" />

                <Button
                    android:id="@+id/inappAppPromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/promo_app_promo" />


                <Button
                    android:id="@+id/multipleMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fetch_multiple_messages" />

                <Button
                    android:id="@+id/btn_get_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/get_tags" />

                <Button
                    android:id="@+id/fcm_token"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get FCM Token" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FCM TOKEN"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_send_push"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send push message" />

                <Button
                    android:id="@+id/btn_register_token"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register token" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/this_is_a_sample_app"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/dummyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@android:color/black" />


                <Button
                    android:id="@+id/inappInbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fetch_inbox_messages" />

                <EditText
                    android:id="@+id/etxt_set_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:hint="@string/some_text"
                    android:inputType="text" />


                <Button
                    android:id="@+id/btn_set_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/set_tag" />

                <EditText
                    android:id="@+id/etxt_remove_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:hint="@string/some_text"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btn_remove_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/remove_tag" />


                <EditText
                    android:id="@+id/etxt_set_attribute_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:hint="@string/key"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/etxt_set_attribute_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:hint="@string/value"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btn_set_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/set_attribute" />

                <EditText
                    android:id="@+id/etxt_get_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:hint="@string/keys"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btn_get_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/get_attribute" />

                <EditText
                    android:id="@+id/etxt_remove_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:hint="@string/some_text"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btn_remove_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/remove_attribute" />

                <EditText
                    android:id="@+id/etxt_get_custom_attributes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:hint="@string/some_text"
                    android:inputType="text" />

                <Button
                    android:id="@+id/get_custom_attributes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/get_custom_attributes_from_server" />

                <Button
                    android:id="@+id/get_alias_from_server"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/get_alias_from_server" />

                <Button
                    android:id="@+id/btn_remove_badge_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/remove_badge_number" />


                <Button
                    android:id="@+id/btn_orientation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_screen_orientation" />

                <Button
                    android:id="@+id/btn_backup_configuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_teal_200"
                    android:text="@string/backup_configuration" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose one option: " />

                <Spinner
                    android:id="@+id/spinner_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:spinnerMode="dialog" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
